{
  "name": "prompt-vault",
  "displayName": "prompt-vault",
  "description": "Save and reuse prompts inside VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:promptVault.hello",
    "onCommand:promptVault.addPrompt",
    "onCommand:promptVault.listPrompts",
    "onCommand:promptVault.editPrompt",
    "onCommand:promptVault.deletePrompt",
    "onCommand:promptVault.insertPrompt",
    "onView:promptVault.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptVault",
          "title": "Prompt Vault",
          "icon": "$(bookmark)"
        }
      ]
    },
    "views": {
      "promptVault": [
        {
          "id": "promptVault.view",
          "name": "Prompts",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "promptVault.hello",
        "title": "Prompt Vault: Hello"
      },
      {
        "command": "promptVault.addPrompt",
        "title": "Prompt Vault: Add Prompt"
      },
      {
        "command": "promptVault.listPrompts",
        "title": "Prompt Vault: List Prompts"
      },
      {
        "command": "promptVault.editPrompt",
        "title": "Prompt Vault: Edit Prompt"
      },
      {
        "command": "promptVault.deletePrompt",
        "title": "Prompt Vault: Delete Prompt"
      },
      {
        "command": "promptVault.insertPrompt",
        "title": "Prompt Vault: Insert Prompt"
      }
    ],
    "keybindings": [
      {
        "command": "promptVault.insertPrompt",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "22.x",
    "typescript": "^5.9.3"
  }
}
